{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm --version",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://linguaquest.onrender.com/api/$1"
    },
    {
      "source": "/scenario",
      "destination": "https://linguaquest.onrender.com/scenario"
    },
    {
      "source": "/translate",
      "destination": "https://linguaquest.onrender.com/translate"
    },
    {
      "source": "/evaluate",
      "destination": "https://linguaquest.onrender.com/evaluate"
    },
    {
      "source": "/dialogue", 
      "destination": "https://linguaquest.onrender.com/dialogue"
    },
    {
      "source": "/score",
      "destination": "https://linguaquest.onrender.com/score"
    },
    {
      "source": "/leaderboard",
      "destination": "https://linguaquest.onrender.com/leaderboard"
    },
    {
      "source": "/sentiment",
      "destination": "https://linguaquest.onrender.com/sentiment"
    },
    {
      "source": "/health",
      "destination": "https://linguaquest.onrender.com/health"
    },
    {
      "source": "/tts",
      "destination": "https://linguaquest.onrender.com/tts"
    }
  ]
}
